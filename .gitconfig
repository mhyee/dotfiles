[alias]
  ci = commit
  cm = commit -m
  cam = commit -am
  ca = commit --amend
  st = status
  sts = status -s
  br = branch
  co = checkout
  df = diff
  dc = diff --cached
  dfs = diff --stat=140
  dcs = diff --cached --stat=140
  dfw = diff --word-diff=color
  dcw = diff --cached --word-diff=color
  lg = log --graph --pretty=format:'%Cred%h%Creset %C(yellow)%an%d%Creset %s %Cgreen(%cr)%Creset' --date=relative
  lo = log --oneline --decorate
[user]
  name = Ming-Ho Yee
  email = mh@mhyee.com
[color]
  ui = auto
  branch = auto
  diff = auto
  status = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
  whitespace = red reverse
[color "diff"]
  meta = yellow reverse
  frag = magenta reverse
  old = red bold
  new = green bold
[diff]
  mnemonicprefix = true
  renames = copies
[color "status"]
  added = green
  changed = yellow
[github]
  user = mhyee
[core]
  autocrlf = input
  editor = vim
  whitespace = fix,trailing-space,cr-at-eol
  ignorecase = false
  pager = less -eirF
[push]
  default = upstream
